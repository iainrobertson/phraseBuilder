<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/phrase_form' %>
		</section>
	</aside>
	<div class="span8">
      <h3>Review Feed</h3>
      <%= render 'shared/feed' %>
    </div>
</div>  
<% else %>
<div class="center hero-unit">
	<h1>Phrase Builder</h1>
	<h2>This is the home page for the Phrase Builder application.</h2>
	<%= link_to "Sign up here!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<small>Phrase Builder is a rails app.</small>
<% end %> 