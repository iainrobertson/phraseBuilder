<li id="<%= feed_item.id %>">
  <span class="user"><%= link_to feed_item.author.name, feed_item.author %></span>
  <span class="content"><%= feed_item.phrase_text %></span>
  <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
  <% if current_user?(feed_item.author) %>
    <%= link_to "delete", feed_item, method: :delete,
    data: { confirm: "Please confirm phrase deletion .." },
    title: feed_item.phrase_text %>
  <% end %>
</li>